FROM node:20-slim

# 必要なパッケージのインストール
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# 開発用ユーザーの作成
RUN useradd -m -s /bin/bash vscode

# pnpmのインストール
RUN npm install -g pnpm

# 作業ディレクトリの設定
WORKDIR /workspace

# ユーザーの切り替え
USER vscode

# 環境変数の設定
ENV PATH="/home/vscode/.local/bin:${PATH}" 